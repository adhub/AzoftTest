@{
    ViewBag.Title = "Валюты";
}

<div id="bodyContainer" ng-app="CurrenciesApp">
    <section id="content">
        <div class="container">
            <div class="row">
                <div ng-controller="CurrenciesCtrl">
                    <p ng-show="working">Работаю...</p>
                    <p ng-show="error">Ошибка: {{errorDescription}}</p>

                    <div class="selection">
                        <h2>Выбор валют</h2>
                        <p><label>Поиск: <input type="text" ng-model="query" ng-change="getSuggestions(query)" /></label></p>
                        <table ng-show="(suggestions | filter: withoutRegistered).length">
                            <tr>
                                <th>Код</th>
                                <th>Наименование</th>
                                <th></th>
                            </tr>
                            <tr ng-repeat="currency in suggestions | filter: withoutRegistered | orderBy:'codeIso4217' | limitTo: 5">
                                <td>{{currency.codeIso4217}}</td>
                                <td>{{currency.nameRu}} ({{currency.nameEn}})</td>
                                <td><button ng-click="register(currency)">Добавить</button></td>
                            </tr>
                        </table>
                    </div>
                    <div class="registered" ng-show="registeredCurrencies.length">
                        <h2>Выбранные валюты:</h2>
                        <table>
                            <tr>
                                <th>Код</th>
                                <th>Наименование</th>
                                <th></th>
                            </tr>
                            <tr ng-repeat="currency in registeredCurrencies | orderBy:'codeIso4217'"
                                ng-class="{checked: currency == selectedCurrency}"
                                ng-click="toggle(currency)">
                                <td>{{currency.codeIso4217}}</td>
                                <td>{{currency.nameRu}}</td>
                                <td><button ng-click="unregister(currency)">Удалить</button></td>
                            </tr>
                        </table>
                    </div>
                    <div ng-hide="registeredCurrencies.length">
                        <h2>Нет выбранных валют</h2>
                    </div>
                    <div class="dynamics" ng-show="selectedCurrency">
                        <div>
                            <p>{{from | date: "fullDate"}} – {{till | date: "fullDate"}}</p>
                            <div style="display: inline-block;">
                                <datepicker ng-model="from"
                                            max-date="maxDate"
                                            show-weeks="false"
                                            class="well well-sm"
                                            starting-day="1">
                                </datepicker>
                            </div>
                            <div style="display: inline-block;">
                                <datepicker ng-model="till"
                                            max-date="maxDate"
                                            show-weeks="false"
                                            class="well well-sm"
                                            starting-day="1">
                                </datepicker>
                            </div>
                        </div>
                        <div>
                            <h2>
                                Динамика курса {{selectedCurrency.codeIso4217}}
                                {{from | date: "dd.MM.yyyy"}} – {{till | date: "dd.MM.yyyy"}}
                                <button ng-hide="selectedCurrency.rates.length" ng-click="refresh()">Показать</button>
                                <button ng-show="selectedCurrency.rates.length" ng-click="refresh()">Обновить</button>
                            </h2>
                            <table ng-show="selectedCurrency.rates.length" class="rates">
                                <tr>
                                    <th>Дата</th>
                                    <th>Курс</th>
                                    <th>Изменение</th>
                                </tr>
                                <tr ng-repeat="rate in selectedCurrency.rates">
                                    <th>{{rate.date | date: "dd.MM.yyyy"}}</th>
                                    <th>{{rate.valueFmt}}</th>
                                    <th ng-class="rate.dir">
                                        {{rate.diff}}
                                        <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                                        <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-locale_ru-ru.js")
    @Scripts.Render("~/Scripts/angular-ui/ui-bootstrap.js")
    @Scripts.Render("~/Scripts/angular-ui/ui-bootstrap-tpls.js")
    @Scripts.Render("~/Scripts/app/currencies-controller.js")
}